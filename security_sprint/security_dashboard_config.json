          "compliance_percentage",
          "sprint_health_indicator",
          "critical_issues_summary",
          "timeline_adherence"
        ]
      }
    },
    "integration_configuration": {
      "vulnerability_scanners": {
        "bandit": {
          "scan_frequency": "every_commit",
          "configuration_file": "bandit.yaml",
          "severity_levels": ["HIGH", "MEDIUM", "LOW"]
        },
        "safety": {
          "scan_frequency": "daily",
          "database_update": "weekly",
          "check_dependencies": true
        },
        "semgrep": {
          "scan_frequency": "every_commit",
          "ruleset": "security",
          "custom_rules": true
        }
      },
      "compliance_validators": {
        "nasa_pot10_validator": {
          "validation_frequency": "daily",
          "rule_configuration": "nasa_pot10_rules.yaml",
          "validation_scope": "full_codebase"
        }
      },
      "ci_cd_integration": {
        "github_actions": {
          "security_workflow": "security_sprint.yml",
          "quality_gates": "quality_gates.yml",
          "compliance_check": "compliance_validation.yml"
        }
      },
      "monitoring_tools": {
        "grafana": {
          "dashboard_url": "security_sprint_dashboard",
          "refresh_interval": "30_seconds",
          "data_retention": "90_days"
        },
        "prometheus": {
          "metrics_collection": "security_metrics",
          "scrape_interval": "15_seconds",
          "alert_rules": "security_alerts.yml"
        }
      }
    },
    "data_visualization": {
      "vulnerability_trend_chart": {
        "chart_type": "line_chart",
