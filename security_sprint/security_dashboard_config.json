        "target_lines": ["zero_critical", "medium_target"],
        "update_frequency": "hourly"
      },
      "compliance_gauge": {
        "chart_type": "gauge_chart",
        "current_value": "nasa_pot10_compliance",
        "target_value": 92,
        "color_ranges": {
          "red": "0-60",
          "yellow": "60-85",
          "green": "85-100"
        }
      },
      "princess_progress_board": {
        "chart_type": "kanban_board",
        "columns": ["pending", "in_progress", "review", "completed"],
        "cards": "princess_domain_tasks",
        "color_coding": "by_princess_domain"
      },
      "sprint_health_heatmap": {
        "chart_type": "heatmap",
        "dimensions": ["princess_domains", "weekly_milestones"],
        "color_scale": "red_yellow_green",
        "data_source": "task_completion_rate"
      }
